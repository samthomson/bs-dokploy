# Blossom Server Environment Variables
# Copy this to .env and fill in your values:
#   cp env.example .env

# Admin dashboard credentials
DASHBOARD_USER=admin
DASHBOARD_PASS=changeme

# Comma-separated hex pubkeys allowed to upload (leave empty to allow any authenticated user)
# Convert npub to hex at https://nostrcheck.me/converter/
ALLOWED_PUBKEYS=

# Authentication requirements
REQUIRE_UPLOAD_AUTH=true
REQUIRE_MEDIA_AUTH=false

